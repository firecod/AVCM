<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.firecod.avcm_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@drawable/launch_screen" />

        <activity android:name=".view.MainActivity"></activity>
        <activity android:name=".view.ActivityMainCliente" />
        <activity android:name=".view.ActivityMainVendedor" />
        <activity android:name=".view.ActivityLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ActivityVendedor" />
        <activity android:name=".view.ActivityAlmacen" />
        <activity android:name=".view.ActivityCliente" />
    </application>

</manifest>